# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

GET     /civil                                 CivilController.index
GET     /civil/add                             CivilController.newCivil
POST    /civil/add                             CivilController.addNewCivil
GET     /civil/update                          CivilController.updateCivil
POST    /civil/update                          CivilController.saveUpdateCivil
POST    /civil/delete                          CivilController.deleteCivil

GET     /vilain                                VilainController.index
GET     /vilain/add                            VilainController.newVilain
POST    /vilain/add                            VilainController.addNewVilain
GET     /vilain/update                         VilainController.updateVilain
POST    /vilain/update                         VilainController.saveUpdateVilain
POST    /vilain/delete                         VilainController.deleteVilain

GET     /orga                                  OrganisationController.index
POST    /orga/add							   OrganisationController.addOrga
GET     /orga/to_update/{id}                   OrganisationController.toUpdate
POST    /orga/update/{id}                      OrganisationController.updateOrga
GET		/orga/delete						   OrganisationController.deleteOrga

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Import Secure routes
GET     /login                           		Registration.login
POST    /login                           		Registration.authenticate
GET     /logout                          		Registration.logout
POST	/register							               	Registration.register

GET		/superhero								SuperHeroController.index
GET		/superhero/create						SuperHeroController.create
POST	/superhero/create						SuperHeroController.postCreate
GET		/superhero/update						SuperHeroController.update
POST	/superhero/update						SuperHeroController.postUpdate
GET		/superhero/delete						SuperHeroController.postDelete					

# Catch all
*       /{controller}/{action}                  {controller}.{action}
