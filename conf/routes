# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
# Civil home page
GET     /civil                                  CivilController.index
# Civil ajout page
GET     /civil/add                              CivilController.newCivil
POST    /civil/add                              CivilController.addNewCivil

GET     /orga                                   OrganisationController.index
POST	/orga/add								OrganisationController.addOrga


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Import Secure routes
GET     /login                           		Registration.login
POST    /secure/login                           Registration.authenticate
GET     /secure/logout                          Registration.logout

# Catch all
*       /{controller}/{action}                  {controller}.{action}
