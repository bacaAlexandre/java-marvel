# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

GET     /civils                                 CivilController.index
GET     /civils/add                             CivilController.newCivil
POST    /civils/add                             CivilController.addNewCivil
GET     /civils/update                          CivilController.updateCivil
POST    /civils/update                          CivilController.saveUpdateCivil
POST    /civils/delete                          CivilController.deleteCivil
GET     /orga                                   OrganisationController.index
POST    /orga/add								                OrganisationController.addOrga
GET     /orga/to_update/{id}                    OrganisationController.toUpdate
POST    /orga/update/{id}                       OrganisationController.updateOrga
GET		  /orga/delete						                OrganisationController.deleteOrga


GET     /vilains                                VilainController.index
GET     /vilains/add                            VilainController.newVilain
POST    /vilains/add                            VilainController.addNewVilain
GET     /vilains/update                         VilainController.updateVilain
POST    /vilains/update                         VilainController.saveUpdateVilain
POST    /vilains/delete                         VilainController.deleteVilain

GET     /orgas                                  OrganisationController.index
POST	/orgas/add								OrganisationController.addOrga
GET		/orgas/delete							OrganisationController.deleteOrga


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Import Secure routes
GET     /login                           		Registration.login
POST    /login                           		Registration.authenticate
GET     /logout                          		Registration.logout
POST	/register							               	Registration.register

# Catch all
*       /{controller}/{action}                  {controller}.{action}
